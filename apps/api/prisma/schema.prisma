// This is your Prisma schema file
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String
  balance   Float    @default(1000.0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  positions      Position[]
  orders         Order[]
  transactions   Transaction[]
  notifications  Notification[]
  comments       Comment[]

  @@map("users")
}

model Market {
  id          String   @id @default(cuid())
  title       String
  description String
  slug        String   @unique
  category    String
  imageUrl    String?
  endDate     DateTime
  resolution  String?
  status      String   @default("active")
  volume      Float    @default(0)
  yesPrice    Float    @default(50)
  noPrice     Float    @default(50)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  orders         Order[]
  positions      Position[]
  priceSnapshots PriceSnapshot[]
  comments       Comment[]

  @@map("markets")
}

model Order {
  id        String   @id @default(cuid())
  userId    String
  marketId  String
  type      String
  outcome   String
  quantity  Int
  price     Float
  status    String   @default("pending")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user         User          @relation(fields: [userId], references: [id])
  market       Market        @relation(fields: [marketId], references: [id])
  transactions Transaction[]

  @@map("orders")
}

model Position {
  id        String   @id @default(cuid())
  userId    String
  marketId  String
  outcome   String
  quantity  Int
  avgPrice  Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User   @relation(fields: [userId], references: [id])
  market Market @relation(fields: [marketId], references: [id])

  @@unique([userId, marketId, outcome])
  @@map("positions")
}

model Transaction {
  id        String   @id @default(cuid())
  userId    String
  orderId   String
  type      String
  amount    Float
  createdAt DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id])
  order Order @relation(fields: [orderId], references: [id])

  @@map("transactions")
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  title     String
  message   String
  type      String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])

  @@map("notifications")
}

model Comment {
  id        String   @id @default(cuid())
  userId    String
  marketId  String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User   @relation(fields: [userId], references: [id])
  market Market @relation(fields: [marketId], references: [id])

  @@map("comments")
}

model PriceSnapshot {
  id        String   @id @default(cuid())
  marketId  String
  yesPrice  Float
  noPrice   Float
  volume    Float
  timestamp DateTime @default(now())

  market Market @relation(fields: [marketId], references: [id])

  @@map("price_snapshots")
}
